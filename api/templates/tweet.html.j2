<svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
    <foreignObject width="100%" height="100%">
        <div xmlns="http://www.w3.org/1999/xhtml" class="container">
            <style>

                .main {
										border-style: solid;
										border-color: #cdcdcd;
										border-width: 1px;
										border-top-left-radius: 25px;
										border-top-right-radius: 25px;
										border-bottom-left-radius: 25px;
										border-bottom-right-radius: 25px;

                }
								.container {
									padding-left: 1%;
									padding-right: 1%;
									padding-top: 1%;
								}
								.container img {
									padding-left: 0px;
									padding-right: 10px;
									padding-top: 10px;
									padding-bottom: 5px;
									width: 100%;
								}
								.tweet {
									padding-left: 1%;
									padding-right: 10%;
								}
								.tweet p{
									font-size: 100%;
									font-family: "Helvetica", sans-serif;
								}
								.tweet p span{
									color: #2b7bb9;
								}

								.date-time {
									padding-left: 1%;
									padding-right: 10%;
									border-bottom-style: solid;
									border-bottom-color: #cdcdcd;
									border-bottom-width: 1px;
								}
								.date-time p{
									font-size: 100%;
									font-family: "Roboto", sans-serif;
									color: #697882;
								}

            </style>
		<div class="main">
			<div class="container">
				<div class="col-md-6">
					<div class="row">
						<img src="data:image/png;base64, {{top}}" />
					</div>
					<div class="row">
						<div class="tweet">
							<p>{{tweettext|safe}}</p>
						</div>
					</div>
					<div class="row">
						<div class="date-time">
							<p>{{date_time|safe}}</p>
						</div>
					</div>
					<div class="row">
						<img src="data:image/png;base64, {{bottom}}" />
					</div>
				</div>
			</div>
		</div>

        </div>
    </foreignObject>
</svg>
